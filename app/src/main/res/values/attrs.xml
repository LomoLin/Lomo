<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 图片展示控件 -->
    <declare-styleable name="ImageGallery">
        <attr name="indicatorUnSelected" format="reference" />
        <attr name="indicatorSelected" format="reference" />
        <attr name="showIndicator" format="boolean" />
    </declare-styleable>
    <!-- 时间轴 -->
    <declare-styleable name="TimeLineMarker">
        <attr name="markerSize" format="dimension" />
        <attr name="marker" format="color|reference" />
        <attr name="beginLine" format="color|reference" />
        <attr name="endLine" format="color|reference" />
        <attr name="lineSize" format="dimension" />
    </declare-styleable>
    <!--刮刮卡-->
    <declare-styleable name="ScratchCard">
        <!-- 底层文字-->
        <attr name="scratchText" format="string"></attr>
        <!-- 底层文字大小-->
        <attr name="scratchTextSize" format="dimension"></attr>
        <!-- 底层文字颜色-->
        <attr name="scratchTextColor" format="color"></attr>
        <!-- 遮盖层颜色 -->
        <attr name="coverColor" format="color"></attr>
        <!-- 遮盖层图片 -->
        <attr name="coverImageResourse" format="reference"></attr>
        <!-- 遮盖层图片放置模式 -->
        <attr name="coverImageGravity" format="enum"></attr>
        <!-- 刮刮卡线条宽度 -->
        <attr name="eraser_width" format="dimension"></attr>
    </declare-styleable>
    <declare-styleable name="StrokeTextView">
        <attr name="stvStrokeWidth" format="float"/>
        <attr name="stvStokeColor" format="color"/>
    </declare-styleable>
</resources>